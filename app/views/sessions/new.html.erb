
  <%= form_with url: login_path do |f| %>
    <br>
    <div class= "reg-form">
        <h3 class="form-head">Log in</h3><br>
        <div class="field form-group">
            <%= f.label "Email:", class: "form-label" %>
            <%= f.email_field :email, class: "form-control" %>
        </div><br>

        <div class="field form-group">
            <%= f.label "Password:", class: "form-label" %>
            <%= f.password_field :password, class: "form-control" %>
        </div><br>


        <div class="actions">
            <%= f.submit "Log in", class: "btn btn-success" %>
        </div><br>

        <div class="card">
            <h5 class="card-header">Don't have an account?</h5>
            <div class="card-body">
                <h5 class="card-title">Create one here</h5>
                <%= link_to "Create new account", signup_path, class: 'btn btn-secondary' %>
            </div>
        </div>


    </div>
<% end %>